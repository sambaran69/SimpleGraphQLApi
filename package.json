{
  "name": "simple-graphql-api",
  "version": "0.0.1",
  "private": false,
  "author": "Sambaran Roy",
  "description": "A simple GraphQL API that utilizes Sequelize.",
  "main": "server.js",
  "devPort": 4000,
  "port": 80,
  "scripts": {
    "clear": "rimraf ./dist",
    "copy": "gulp copy",
    "build": "tsc",
    "watch": "tsc --watch",
    "prebuild": "yarn run clear && yarn run copy",
    "prewatch": "yarn run clear && yarn run copy",
    "start": "yarn run start:api",
    "start:api": "NODE_ENV=development 'yarn run watch' 'nodemon ./dist/server.js'"
  },
  "license": "ISC",
  "dependencies": {
    "@types/body-parser": "^1.16.4",
    "@types/express": "^4.0.36",
    "@types/express-graphql": "^0.0.33",
    "@types/graphql": "^0.9.2",
    "@types/js-yaml": "^3.5.31",
    "body-parser": "^1.17.2",
    "config": "^1.26.1",
    "express": "^4.15.3",
    "express-graphql": "^0.6.6",
    "graphql": "^0.10.3",
    "gulp": "^3.9.1",
    "gulp-sourcemaps": "^1.12.0",
    "gulp-typescript": "^3.1.7",
    "js-yaml": "^3.8.4",
    "nodemon": "^1.11.0",
    "rimraf": "^2.6.1",
    "sequelize": "^4.4.2",
    "sequelize-typescript": "^0.4.0",
    "typescript": "^2.3.4",
    "watch": "^1.0.2"
  },
  "devDependencies": {}
}
